{
  "name": "achievements-app",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "postinstall": "yarn db:generate",
    "test": "nx test",
    "dev:api": "TZ=UTC nx serve api",
    "build:api": "yarn db:migrate:deploy && nx build api --prod",
    "start:api": "TZ=UTC pm2-runtime start dist/apps/api/main.js",
    "test:api": "dotenv -e .env.test -- yarn docker:up && nx test api --runInBand",
    "db:migrate:deploy": "prisma migrate deploy --schema=./libs/data-access-db/src/prisma/schema.prisma",
    "db:migrate:dev": "prisma migrate dev --schema=./libs/data-access-db/src/prisma/schema.prisma",
    "db:reset": "nx run data-access-db:reset && npx ts-node tools/reset-redis.ts",
    "db:seed": "nx run data-access-db:seed",
    "db:studio": "nx run data-access-db:studio",
    "db:generate": "prisma generate --schema=./libs/data-access-db/src/prisma/schema.prisma",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "private": true,
  "dependencies": {
    "@nestjs/bull": "^0.6.2",
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/schedule": "^2.1.0",
    "@ntegral/nestjs-sentry": "^4.0.0",
    "@prisma/client": "4.7.1",
    "@sentry/node": "^7.28.1",
    "@xboxreplay/xboxlive-api": "^3.4.3",
    "@xboxreplay/xboxlive-auth": "^4.0.0",
    "bull": "^4.10.2",
    "dayjs": "^1.11.7",
    "limiter": "^2.1.0",
    "p-limit": "3.1.0",
    "psn-api": "^2.8.3",
    "redis": "^4.5.1",
    "reflect-metadata": "^0.1.13",
    "retroachievements-js": "^1.3.2",
    "rxjs": "^7.0.0",
    "tslib": "^2.3.0",
    "urlcat": "2.0.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@nrwl/eslint-plugin-nx": "15.3.3",
    "@nrwl/jest": "15.3.3",
    "@nrwl/linter": "15.3.3",
    "@nrwl/nest": "15.3.3",
    "@nrwl/node": "15.3.3",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/workspace": "15.3.3",
    "@types/bull": "^4.10.0",
    "@types/cron": "^2.0.0",
    "@types/jest": "28.1.1",
    "@types/node": "18.7.1",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "cross-spawn": "^7.0.3",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^6.0.0",
    "eslint": "~8.15.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
